table(class="manage-tbl")
  tr
    td
    td
      input(ng-model="name")
    td
      input(ng-model="url")
    td
      a(class="btn" href="" ng-click="(name && url)? add(): void(0)")
        | + Add
  tr(ng-repeat="entry in rssList" 
    ng-click="(current_edit.url != entry.url)? select(entry) : false")
    td
      input(type="checkbox", ng-model="entry.show", ng-change="rssList.$save(entry)")
    td
      span(ng-if="!oldUrl || oldUrl !== entry.url")
        | {{entry.name}}
      input(ng-model="current_edit.name" ng-if="oldUrl === entry.url")
    td
      span(ng-if="!oldUrl || oldUrl !== entry.url")
        | {{entry.url}}
      input(ng-model="current_edit.url" ng-if="oldUrl === entry.url")
    td
      a.btn(href="#" ng-click="delete(entry.$id, entry.url)")
        | Delete
      a.btn(href="#" ng-click="edit(entry.url, entry.$id)")
        | {{(oldUrl && oldUrl === entry.url ? 'Save' : 'Edit')}}
